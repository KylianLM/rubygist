<div class="row large-offset-6">
  <%= form_tag "/gist", method: "post" do %>
      <div class="row">
        <div class="small-3 columns">
          <label for="category" class="text-right middle">Categories :</label>
        </div>
        <div class="small-5">
          <select name="category" id="category">
            <% @categories.each do |category| %>
                <option value="<%= category.id%>"><%= category.name %></option>
            <% end %>
          </select>
        </div>
        <div class="small-3">
          <input class="button success" type="submit">
          <a href="/"><button class="alert button">Reset</button></a>
        </div>
      </div>
  <% end %>
</diV>

</div>
