<h1>Liste Gist</h1>
<a href="/gist/add" class="button">Ajouter</a>
<div class="large-offset-3">
  <div class="row">
    <div class="large-9">
      <%= form_tag "/gist", method: "post" do %>
          <div class="row">
            <div class="small-3 columns">
              <label for="category" class="text-right middle">Categories :</label>
            </div>
            <div class="small-5">
              <select name="category" id="category">
                <% @categories.each do |category| %>
                    <option value="<%= category.id%>"><%= category.name %></option>
                <% end %>
              </select>
            </div>
            <div class="small-3" style="margin-left: 20px">
              <input class="button success" type="submit">
            </div>
          </div>
      <% end %>
    </div>
    <div class="large-3">
      <a href="/"><button class="alert button">Reset</button></a>
    </div>
  </div>
</div>
<table class="large-6 large-offset-3">
  <thead>
  <tr>
    <th>Nom</th>
    <th>Cat√©gories</th>
    <th width="200">Lien</th>
  </tr>
  </thead>
  <% @gists.each do | gist | %>
      <tr>
        <td>
          <%= gist.name %>
        </td>
        <td>
          <span class="label"><%= gist.category.name %></span>
        </td>
        <td>
          <a href="<%=gist.url %>" target="_blank">Afficher</a>
        </td>
      </tr>
  <% end %>
</table>